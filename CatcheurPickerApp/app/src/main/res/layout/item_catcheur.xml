<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageCatcheur"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewNomScene"
                android:layout_width="200dp"
                android:layout_weight="33.33"
                android:layout_height="wrap_content"
                android:text="TextViewNomScene" />

            <TextView
                android:id="@+id/textViewDateNaissance"
                android:layout_width="200dp"
                android:layout_weight="33.33"
                android:layout_height="wrap_content"
                android:text="TextViewDateNaissance" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewTaille"
                android:layout_width="200dp"
                android:layout_weight="33.33"
                android:layout_height="wrap_content"
                android:text="TextViewTaille" />

            <TextView
                android:id="@+id/textViewPoids"
                android:layout_width="200dp"
                android:layout_weight="33.33"
                android:layout_height="wrap_content"
                android:text="TextViewPoids" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editCatcheur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33.33"
                android:background="#CFAE49"
                android:text="Modifer"
                android:textColor="#37474F"
                android:textSize="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/modifierCatcheur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33.33"
                android:background="#009688"
                android:shadowRadius="8"
                android:text="Modifier"
                android:textColor="#000000"
                android:textSize="10dp"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/delCatcheur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33.33"
                android:background="#C10505"
                android:text="Supprimer ce catcheur"
                android:textColor="#FFCDD2"
                android:textSize="10dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>